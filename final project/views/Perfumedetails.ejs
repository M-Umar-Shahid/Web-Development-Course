<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= perfume.name %> Details</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <!-- <link rel="stylesheet" href="/styles/homepage.css" /> -->
    <link rel="stylesheet" href="/styles/perfumesdetail.css" />
  </head>
  <body>
    <%- include('../public/components/navbar') %> <%-
    include('../public/components/sidebar') %>

    <div class="container">
      <div class="product-details">
        <h4 class="text-center"><%= perfume.name %> Details</h4>
        <div class="row">
          <div class="col-lg-6">
            <img
              src="<%= perfume.image %>"
              alt="<%= perfume.name %>"
              class="img-fluid"
            />
          </div>
          <div class="col-lg-6">
            <p class="lead">Description: <%= perfume.description %></p>
            <p class="lead">Price: <%= perfume.price %></p>
            <!-- Quantity adjustment -->
            <div class="input-group mb-3">
              <span class="input-group-text">Quantity</span>
              <input
                type="number"
                class="form-control quantity-input"
                value="1"
              />
              <button
                class="btn btn-outline-secondary quantity-adjust"
                type="button"
                data-action="decrease"
              >
                -
              </button>
              <button
                class="btn btn-outline-secondary quantity-adjust"
                type="button"
                data-action="increase"
              >
                +
              </button>
            </div>
            <button class="btn btn-primary add-to-cart">Add to Cart</button>
            <!-- Add any other details you want to display -->
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="/scripts/perfumesdetail.js"></script>
  </body>
</html>
